@model FestivalAPI.Models.Hebergement

@{
    ViewData["Title"] = "Create";
}
<p><br /></p>
<p><br /></p>
<p><br /></p>
<h1>Créer un hébergement</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TypeHebergement" class="control-label">Indiquez le type d'hebergement</label>
                <input asp-for="TypeHebergement" class="form-control" />
                <span asp-validation-for="TypeHebergement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LienHebergement" class="control-label">Insérez le lien vers l'hébergement</label>
                <input asp-for="LienHebergement" class="form-control" />
                <span asp-validation-for="LienHebergement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FestivalID" class="control-label">Indiquez le festival qui possède cet hébergement</label>
                <select asp-for="FestivalID" class="form-control" asp-items="ViewBag.FestivalID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste.</a>
</div>
