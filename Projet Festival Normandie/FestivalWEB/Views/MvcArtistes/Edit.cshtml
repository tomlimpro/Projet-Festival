@model FestivalAPI.Models.Artiste

@{
    ViewData["Title"] = "Edit";
}
<p><br /></p>
<p><br /></p>
<p><br /></p>

<h1>Modifier un artiste</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArtisteID" />
            <div class="form-group">
                <label asp-for="Nom_Artiste" class="control-label"></label>
                <input asp-for="Nom_Artiste" class="form-control" />
                <span asp-validation-for="Nom_Artiste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Style_Artiste" class="control-label"></label>
                <select asp-for="Style_Artiste" class="form-control">
                    <option value="Rap">Rap</option>
                    <option value="Rock">Rock</option>
                    <option value="Hard rock">Hard rock</option>
                    <option value="Variete">Varieté</option>
                    <option value="Electro">Electro</option>
                    <option value="Pop">Pop</option>
                    <option value="Jazz">Jazz</option>
                    <option value="Reggae">Reggae</option>
                    <option value="Blues">Blues</option>
                    <option value="Country">Country</option>
                </select>
                <span asp-validation-for="Style_Artiste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descriptif_Artiste" class="control-label"></label>
                <input asp-for="Descriptif_Artiste" class="form-control" />
                <span asp-validation-for="Descriptif_Artiste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pays_Artiste" class="control-label"></label>
                <select asp-for="Pays_Artiste" class="form-control">
                    <option value="France">France</option>
                    <option value="Espagne">Espagne</option>
                    <option value="Italie">Italie</option>
                    <option value="Royaume-uni">Royaume-Uni</option>
                    <option value="Canada">Canada</option>
                    <option value="Etats-unis">États-Unis</option>
                    <option value="Chine">Chine</option>
                    <option value="Japon">Japon</option>
                </select>
                <span asp-validation-for="Pays_Artiste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtraitMusical_Artiste" class="control-label"></label>
                <input asp-for="ExtraitMusical_Artiste" class="form-control" />
                <span asp-validation-for="ExtraitMusical_Artiste" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SceneID" class="control-label"></label>
                <select asp-for="SceneID" class="form-control" asp-items="ViewBag.SceneID"></select>
                <span asp-validation-for="SceneID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlImage" class="control-label"></label>
                <input asp-for="UrlImage" class="form-control" />
                <span asp-validation-for="UrlImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Revenir à la liste</a>
</div>

