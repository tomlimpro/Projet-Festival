<h1>Détails de l'artiste</h1>

<div>
    <h4>Artiste</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <img src="/images/@Html.DisplayFor(model => model.UrlImage)" />
             
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom_Artiste)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom_Artiste)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Style_Artiste)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Style_Artiste)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descriptif_Artiste)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descriptif_Artiste)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pays_Artiste)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pays_Artiste)
        </dd>
        
    </dl>

    <hr />
    <iframe src="@Html.DisplayFor(model => model.ExtraitMusical_Artiste)" height"720px"width="100%" frameborder="0" allowfullscreen=""></iframe>
